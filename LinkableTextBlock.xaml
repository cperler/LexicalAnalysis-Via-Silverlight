<Canvas xmlns="http://schemas.microsoft.com/client/2007"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:StringTemplate;assembly=ClientBin/StringTemplate.dll"
        MouseEnter='OnMouseEnter'
        MouseLeave='OnMouseLeave'
        MouseLeftButtonDown='OnMouseClick'
        MouseLeftButtonUp='OnMouseRelease'        
>
  
  <Rectangle x:Name='highlight' Visibility='Collapsed' Canvas.ZIndex='-1'>
    <Rectangle.Fill>
      <SolidColorBrush Color='LightGray'/>
    </Rectangle.Fill>
  </Rectangle>

  <TextBlock x:Name='block'/>

</Canvas>